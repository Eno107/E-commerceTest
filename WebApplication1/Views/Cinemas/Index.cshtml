@model IEnumerable<Cinema>

@{
	ViewData["Title"] = "List of Cinemas";
}

@*Write Code*@

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.Logo)</th>
					<th>@Html.DisplayNameFor(model => model.Name)</th>
					<th>@Html.DisplayNameFor(model => model.Description)</th>
					<th>Actions</th>
				</tr>
			</thead>
			@foreach (Cinema cinema in Model)
			{
				<tr>
					<td class="align-middle">
						<img class="rounded-circle" src="@cinema.Logo" style="max-width:150px">
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => cinema.Name)
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => cinema.Description)
					</td>
					<td class="align-middle">
						<a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a>
						<a class="btn btn-outline-info"><i class="bi bi-eye">See</i></a>
						<a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a>
					</td>
				</tr>

			}

			<tbody>
			</tbody>
		</table>

	</div>
</div>