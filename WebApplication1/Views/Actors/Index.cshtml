@model IEnumerable<Actor>

@{
	ViewData["Title"] = "List of Actors";
}

@*Write Code*@

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.ProfilePicUrl)</th>
					<th>@Html.DisplayNameFor(model => model.FullName)</th>
					<th>@Html.DisplayNameFor(model => model.Bio)</th>
					<th>Actions</th>
				</tr>
			</thead>
			@foreach (Actor actor in Model)
			{
				<tr>
					<td class="align-middle">
						<img class="rounded-circle" src="@actor.ProfilePicUrl" style="max-width:150px">
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => actor.FullName)
					</td>
					<td class="align-middle">
						@Html.DisplayFor(modelItem => actor.Bio)
					</td>
					<td class="align-middle">
						<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@actor.Id"><i class="bi bi-pencil-square">Edit</i></a>
						<a class="btn btn-outline-info"  asp-action="Details" asp-route-id="@actor.Id"><i class="bi bi-eye">See</i></a>
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@actor.Id"><i class="bi bi-trash">Delete</i></a>
					</td>
				</tr>

			}

			<tbody>
			</tbody>
		</table>

	</div>
</div>


<div class="text-white" style="position: fixed; right: 25px; bottom:25px;">
	<a asp-controller="Actors" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle">Add New</i></a>
</div>